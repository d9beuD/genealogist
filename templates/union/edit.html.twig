{% extends 'base.html.twig' %}

{% block title %}Modifier l'union{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        {% if person.tree.name is defined %}
            <li class="breadcrumb-item"><a href="#">{{ person.tree.name }}</a></li>
        {% endif %}
        {% if person.firstname is defined and person.lastname is defined %}
            <li class="breadcrumb-item"><a href="#">{{ person.firstname }} {{ person.lastname }}</a></li>
        {% endif %}
        <li class="breadcrumb-item active" aria-current="page">Edit Union</li>
    </ol>
</nav>

<section class="py-5">
    <div class="container">
        <div class="row align-items-end">
            <div class="col">
                <h1>Modifier l'union</h1>
            </div>
            <div class="col-auto">
                {{ include('union/_delete_form.html.twig') }}
            </div>
        </div>

        <h2 class="h5">Partenaires</h2>
        <div class="row g-2 mb-3">
            {% for partner in union.people %}
                <div class="col-auto">
                    {{ include('person/_avatar.html.twig', { person: partner, with_actions: true, from: person }) }}
                </div>
            {% endfor %}
        </div>

        <h2 class="h5">Enfants</h2>
        <div class="row g-2 mb-3">
            {% for child in union.children %}
                <div class="col-auto">
                    {{ include('person/_avatar.html.twig', { person: child, with_actions: true, from: person, type: 'child' }) }}
                </div>
            {% endfor %}
        </div>

        {{ include('union/_form.html.twig', {'button_label': 'Mettre Ã  jour'}) }}

        {% if union.people | length < 2 %}
            <h3>Ajouter un conjoint</h3>
            {{ include('union/_form_union_selector.html.twig', { form: partner_form, person: person }) }}
        {% endif %}

        <h3>Ajouter un enfant</h3>
        {{ include('union/_form_union_selector.html.twig', { form: child_form, person: person, type: 'child' }) }}
    </div>
</section>
{% endblock %}
