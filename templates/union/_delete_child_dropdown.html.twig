<form 
    method="post" 
    action="{{ path('app_union_remove_child', { id: union.id, personId: from.id, childId: child.id }) }}" 
    onsubmit="return confirm('{{ 'alert.confirm_delete_union_member'|trans({ name: partner.fullName }) }}?');"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ child.id) }}">
    <button class="dropdown-item text-danger">
        <i class="fa-solid fa-fw fa-trash"></i>
        {{ 'action.delete'|trans }}
    </button>
</form>
