{% extends 'base.html.twig' %}
{% from "_includes/macro.html.twig" import alert %}

{% block title %}{{ 'form.login'|trans }}{% endblock %}

{% block body %}
{{ include('_includes/main/flashes.html.twig') }}

<section class="my-4">
    <div class="container">
        <div class="form-medium">
            {% if error %}
                {{ alert('danger', error.messageKey|trans(error.messageData, 'security')) }}
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>.
                </div>
            {% endif %}

            <h1>{{ 'form.login'|trans }}</h1>
            
            {{ form_start(form) }}
                {{ form_row(form.email, { value: last_username }) }}
                {{ form_row(form.password) }}
                {{ form_row(form.remember_me) }}

                <div class="text-end">
                    <button class="btn btn-primary" type="submit">
                        {{ 'action.login'|trans }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}
