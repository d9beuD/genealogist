{% extends 'base.html.twig' %}

{% block title %}{{ 'title.tree_of'|trans({ name: person.fullName }) }}{% endblock %}

{% block body %}
{{ include('_includes/main/breadcrumb.html.twig', { items: [
    { label: person.tree.name, link: path('app_tree_show', { id: person.tree.id }) },
    { label: 'title.tree_of'|trans({ name: person.fullName }), link: path('app_tree_show', { id: person.tree.id }) }
] }) }}

{{ include('_includes/main/flashes.html.twig') }}

<section id="tree" class="row gx-0">
    <div class="col-md-auto bg-body" id="tree-option-panel">
        <div class="px-3 py-4">
            {{ include('tree/_tree_form.html.twig', { tree: person.tree }) }}
        </div>
    </div>
    <div class="col-md d-flex justify-content-center align-items-center" id="tree-view-panel">
        <div class="p-3" style="width: fit-content;">
            {{ include('tree/tree.html.twig', { person: person, depth: 1 }) }}
        </div>
    </div>
</section>
{% endblock %}